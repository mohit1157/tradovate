# ===========================================
# Autonomous Futures Trading Bot Configuration
# ===========================================
# Copy this file to .env and fill in your API keys

# Google Gemini API (Required)
# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Twitter/X API (Optional - for Twitter sentiment)
# Get from: https://developer.twitter.com/en/portal/dashboard
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# Reddit API (Optional - for Reddit sentiment)
# Get from: https://www.reddit.com/prefs/apps
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=TradingBot/1.0

# News API (Optional - for news sentiment)
# Get from: https://newsapi.org/
NEWS_API_KEY=your_news_api_key

# Alpha Vantage (Optional - for additional news)
# Get from: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key

# Server Configuration
SERVER_HOST=127.0.0.1
SERVER_PORT=8787

# Trading Configuration
DEFAULT_SYMBOLS=MNQ,MES,ES,NQ
CONFIDENCE_THRESHOLD=0.55
MAX_DAILY_LOSS=500.0
MAX_TRADES_PER_DAY=10
COOLDOWN_SECONDS=30

# Sentiment Weights (must sum to 1.0)
TWITTER_WEIGHT=0.3
REDDIT_WEIGHT=0.3
NEWS_WEIGHT=0.4

# Logging
LOG_LEVEL=INFO

# Database
DATABASE_URL=sqlite:///./data/trading_bot.db
