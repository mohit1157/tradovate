# ===========================================
# Autonomous Futures Trading Bot Configuration
# ===========================================
# Copy this file to .env and fill in your credentials

# ==================== TRADOVATE (Required) ====================
# Get credentials from: https://trader.tradovate.com/
# Sign up for a free demo account to test

TRADOVATE_USERNAME=your_tradovate_username
TRADOVATE_PASSWORD=your_tradovate_password

# Optional: API Key authentication (more secure)
# Get from Tradovate settings -> API Access
TRADOVATE_APP_ID=TradingBot
TRADOVATE_CID=
TRADOVATE_SECRET=

# Trading symbol (e.g., MNQH5 for Micro Nasdaq March 2025)
TRADING_SYMBOL=MNQH5

# ==================== GEMINI AI (Required for sentiment) ====================
# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# ==================== TWITTER/X (Optional) ====================
# Get from: https://developer.twitter.com/en/portal/dashboard
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_TOKEN_SECRET=
TWITTER_BEARER_TOKEN=

# ==================== REDDIT (Optional) ====================
# Get from: https://www.reddit.com/prefs/apps
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=
REDDIT_USER_AGENT=TradingBot/1.0

# ==================== NEWS API (Optional) ====================
# Get from: https://newsapi.org/
NEWS_API_KEY=

# Alpha Vantage: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=

# ==================== TRADING PARAMETERS ====================
# Risk Management
MAX_CONTRACTS=1
MAX_DAILY_LOSS=500.0
MAX_TRADES_PER_DAY=10
COOLDOWN_SECONDS=30

# Signal thresholds
CONFIDENCE_THRESHOLD=0.55

# Technical indicator periods
FAST_EMA=9
SLOW_EMA=21
ATR_PERIOD=14

# ATR multipliers for stops/targets
STOP_ATR_MULT=1.5
TARGET_ATR_MULT=2.0

# ==================== SENTIMENT WEIGHTS ====================
# Must sum to 1.0
TWITTER_WEIGHT=0.3
REDDIT_WEIGHT=0.3
NEWS_WEIGHT=0.4

# ==================== SERVER (for signal server mode) ====================
SERVER_HOST=127.0.0.1
SERVER_PORT=8787

# ==================== LOGGING ====================
LOG_LEVEL=INFO

# ==================== DATABASE ====================
DATABASE_URL=sqlite:///./data/trading_bot.db
